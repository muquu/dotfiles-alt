# ls
alias la="ls -a"
alias lf="ls -F"
alias ll="ls -lh"

alias ls='ls --color'
alias vi=vim
alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

# process
# alias j="jobs -l"
alias 'ps?'='pgrep -l -f'
alias pk='pkill -f'

# du/df
alias du="du -h"
alias df="df -h"
alias duh="du -h ./ --max-depth=1"

# su
alias su="su -l"

# vim
alias 'src'='exec zsh'

# grep
alias 'gr'='grep --color=auto -ERUIn --exclude-dir=.git --exclude-dir=.svn --exclude-dir=log --exclude-dir=vendor --exclude=tags'

#make
alias 'm'='make'
alias 'mn'='make native-code'
alias 'mc'='make clean'

# tmux
alias tm='tmux -2'
alias tma='tmux -2 attach'
alias tml='tmux list-window'

# git
alias g='git'
alias gi='git'
alias gs='git status'
alias gc='git commit'
alias gci='git commit -a'

